<% include ../partials/header %>

<div class="main" >
    <h1 style="margin:25px;">Register</h1>
      <div class="col-12 col-md-6" style="margin:auto; text-align: left;">
        <form action="/users/register" method="post">
            <div class="form-group">
                <label for="username">Username</label>
                <input id="token" class="form-control" type="text" name="username" placeholder="Username">
            </div>  
            <div class="form-group">
                <label for="email">Email</label>
                <input id="token" class="form-control" type="email" name="email" placeholder="Email">
            </div>  
            <div class="form-group">
                <label for="country">Country</label>
                <input id="token" class="form-control" type="text" name="country" placeholder="Country">
            </div>  
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" placeholder="Password">
            </div>
            <div class="form-group">
                <button class="form-control btn-dark" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

