<% include ../partials/header %>

<div  id="form-container" class="container" >
        <h1 style="margin:25px;">Account Details</h1>
          <div class="col-12 col-md-6" style="margin:auto; text-align: left;">
        
            <table class="table table-striped">
                <tbody>
                    <tr>
                    <th scope="row">Username:</th>
                    <td><%=currentUser.username%></td>
                    </tr>
                    <tr>
                    <th scope="row">Email:</th>
                    <td><%=currentUser.email%></td>
                    </tr>
                    <tr>
                    <th scope="row">Country:</th>
                    <td><%=currentUser.country%></td>
                    </tr>
                </tbody>
            </table>

            <% currentUser.wallets.forEach(function(wallet){ %>
                <h1 style="text-align:center;">Wallets</h1>
                <table class="table table-striped">
                    <tbody>
                        <tr>
                        <th scope="row">Token:</th>
                        <td><%=wallet.token%></td>
                        </tr>
                        <tr>
                        <th scope="row">Balance:</th>
                        <td><%=wallet.balance%></td>
                        </tr>
                        <tr>
                        <th scope="row">Public key:</th>
                        <td><%=wallet.publicKey%></td>
                        </tr>
                        <tr>
                        <th scope="row">Private key:</th>
                        <td><%=wallet.privateKey%></td>
                        </tr>
                    </tbody>
                </table>
            <%});%>
        </div>
    </div>

<% include ../partials/footer %>