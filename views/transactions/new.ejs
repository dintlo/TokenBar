<% include ../partials/header %>

<div  id="form-container" class="container" >
    <h1 style="margin:25px;">Buy an Asset Token from <%=asset.name%></h1>
      <div class="col-12 col-md-6" style="margin:auto; text-align: left;">
        <form action="/transactions" method="post">
            <div class="form-group">
                <label for="name">Asset Token</label>
                <input id="token" class="form-control" type="text" disabled="true" name="token" placeholder="<%=asset.token%>">
            </div>
            <div class="form-group">
                <label for="name">Asset Public Key</label>
                <input class="form-control" type="text" disabled="true" name="sellerKey" placeholder="<%=asset.wallet.publicKey%>">
            </div>
            <div class="form-group">
                <label for="name">Your Public Key</label>
                <input class="form-control" type="text" name="buyerKey" placeholder="Your public Key">
            </div>
            <div class="form-group">
                <label for="name">Amounts of Token</label>
                <input class="form-control" type="text" name="amount" placeholder="amount">
            </div>
            <div class="form-group">
                <button class="form-control btn-dark" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>