<% include ../partials/header %>

<div  id="form-container" class="container" >
    <h1 style="margin:25px;">Buy an Asset Token from <%=asset.name%></h1>
    <div class="row">
        <div class="col-12 col-md-6" style="margin:auto; text-align: left;">
            <form action="/transactions" method="post">
                <div class="form-group">
                    <label for="name">Asset Token</label>
                    <input id="token" class="form-control" type="text" disabled="true" name="token" placeholder="<%=asset.token%>">
                </div>
                <div class="form-group">
                    <label for="name">Available Tokens</label>
                    <input class="form-control" type="text" disabled="true" placeholder="<%=asset.tokenAvail%>">
                </div>
                <div class="form-group">
                    <label for="name">Token Price in <b>NLT</b></label>
                    <input class="form-control" disabled="true" type="text" placeholder="<%=asset.tokenPrice%>">
                </div>
                <div class="form-group">
                    <label for="name">Totol Price in <b>NLT</b></label>
                    <input class="form-control" disabled="true" type="text" name="amount" placeholder="0">
                </div>
                <div class="form-group">
                    <label for="name">Amounts of Token in <b><%=asset.token%></b></label>
                    <input class="form-control" type="text" name="amount" placeholder="amount">
                </div>
                <div class="form-group">
                    <button class="form-control btn-dark" type="submit">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-12 col-md-3">
            <% currentUser.wallets.forEach(function(wallet){ %>
                <h5 style="text-align:center;">Your Wallets</h5>
                <table style="text-align:left;" class="table table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">Token</th>
                            <td><%=wallet.token%></td>
                        </tr>
                        <tr>
                            <th scope="row">Balance</th>
                            <td><%=wallet.balance%></td>
                        </tr>
                        <tr>
                            <th scope="row">Buying power</th>
                            <td><%=wallet.balance * asset.tokenPrice%> <b><%=asset.token%></b></td>
                        </tr>
                    </tbody>
                </table>
            <%});%>
        </div>
    </div>
      
</div>

<% include ../partials/footer %>